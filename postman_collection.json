        "url": {
          "raw": "{{baseUrl}}/analyze",
          "host": ["{{baseUrl}}"],
          "path": ["analyze"]
        },
        "description": "Example: Analyze metformin for diabetes treatment"
      },
      "response": []
    },
    {
      "name": "Analyze - Aspirin & Heart Disease",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"drug\": \"aspirin\",\n  \"disease\": \"heart disease\"\n}"
