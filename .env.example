# UpShiftRx Environment Variables
# Copy this file to .env and update with your values

# PubMed API Configuration
PUBMED_EMAIL=your-email@domain.com

# Data Paths (for private repo integration)
# PRIVATE_REPO_PATH=../upshiftrx-ai-private/
# FULL_PUBMED_DIR=../upshiftrx-ai-private/results/full_pubmed/
# DRUGBANK_DIR=../upshiftrx-ai-private/results/drugbank/
# MODELS_DIR=../upshiftrx-ai-private/models/

# API Rate Limiting
PUBMED_RATE_LIMIT=2.0
MAX_RESULTS_DEFAULT=50

# Development Settings
DEBUG=false
LOG_LEVEL=INFO